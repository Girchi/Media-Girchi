include parts/head.pug
body
  .outerContainer
    .item
      img(src='./assets/img/download')
    .circle
  // ======= Top Bar =======
  section#topbar.d-flex.align-items-center
    .container.d-flex.justify-content-center.justify-content-md-between
      .contact-info.d-flex.align-items-center
        i.bi.bi-envelope-fill
        a(href='mailto:contact@example.com')
          | info@girchi.com
      .social-links.d-none.d-md-block
        a.twitter(href='https://twitter.com/girchiparty' target='_blank')
          i.bi.bi-twitter#twitter
        a.facebook(href='https://www.facebook.com/GirchiParty/' target='_blank')
          i.bi.bi-facebook#facebook
        a.instagram(href='https://www.instagram.com/girchiparty/?hl=en' target='_blank')
          i.bi.bi-instagram#instagram

  // ======= Header =======
  header#header.d-flex.align-items-center
    .container.d-flex.align-items-center.girchi-news--nav
      nav#navbar.navbar
        ul
          li
            a.nav-link.scrollto.active#general(href='/') ზოგადი
          li
            a.nav-link.scrollto#girchi(href='/girchi_news') გირჩი


.main.page.girchi-news--section
  h3#main.container სიახლეები გირჩზე
  hr.hrelement.container
  .container.news_container.archive
    each subObject in object
      .main-card
        .card.girchi-card.flex-column.article
          img.image.card-img-top.girchi-news--img(src=subObject.imgUrl alt='Card image cap')
          a.card-body.girchi-p(href=subObject.link target='_blank')
            h5.card-title=subObject.title
            p.card-text=subObject.text
            p.card-text
              small.text-muted=subObject.articleDate
          .img_font
            img.small-img(src=subObject.logo alt='Card image cap')
    

// ======= Footer =======
include parts/footer.pug
// End footer 

include parts/scripts.pug
script(src="../assets/components/browserSide/shortenArticle.js") 
script(type="module" src="../assets/components/browserSide/clickFavorite.js") 

script.  
  document.querySelector("#general").className = "nav-link scrollto";
  document.querySelector("#girchi").className = "nav-link scrollto active";

