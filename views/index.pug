.left-fixed-container
  each subObject in importantNews
    .very-important(value=subObject.source)
      .very-important--card
        .left-inside--section
          img.image-veryImportant(src=subObject.imgUrl alt='Card image cap')
          p.card-text-important
            small.text-muted.text-date--important=subObject.articleDate
            img.small-img--important(src=subObject.logo alt="Source's logo")
        .right-inside--section
          a.card-body(href=subObject.link target='_blank')
            h5=subObject.title
            p.card-text=subObject.text


.right-fixed-container
  hr.left-fixed-container-hr
  //- p.right-fixed-container-p გაფილტრე სიახლეები
  ul.right-fixed-container-ul
    li(onclick='filterPosts("Formula")').fixed-container-list-item.formula-item
      img(src="https://upload.wikimedia.org/wikipedia/commons/7/7b/TV_Formula_-_Official_Logo.png" alt="")
